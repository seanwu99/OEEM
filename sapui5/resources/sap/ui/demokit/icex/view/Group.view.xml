<mvc:View controllerName="sap.ui.demokit.icex.view.Group"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{text} ({count})"
		showNavButton="true"
		navButtonPress="navBack"
		icon="{img>/icon/ui5}">
		<headerContent>
			<Button
			  	id="openFavorites"
				icon="sap-icon://favorite-list"
				tooltip="Show Favorites"
				press="toFavorite">
			</Button>
		</headerContent>
		<footer>
			<Toolbar/>
		</footer>
		<content>
			<List
				id="iconList"
				select="selectIconList"
				mode="{ui>/listMode}"
				growing="true"
				growingScrollToLoad="true"
				growingThreshold="{ui>/listPageSize}"
				items="{icons}">
				<items>
					<StandardListItem
						title="{name}"
						type="{ui>/listItemType}"
						press="pressIconListItem"
						icon="sap-icon://{name}"
						iconInset="true">
					</StandardListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>